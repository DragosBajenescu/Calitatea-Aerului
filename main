#include<MQ2.h>
#include<LiquidCrystal_I2C.h>

#define MQ_PIN A0

LiquidCrystal_I2C lcd (0x27, 16, 2);
MQ2 mq2(A0);

void setup(){
  mq2.begin();
  lcd.begin();
  lcd.backlight();
  Serial.begin(9600);
}

void loop(){
  float concentratieCO = mq2.readCO();
  float concentratieLPG = mq2.readLPG();
  float concentratieFum = mq2.readSmoke();
  lcd.setCursor(0, 0);
  lcd.print("Fum: ");
  lcd.print(concentratieFum);
  lcd.print("ppm   ");

  lcd.setCursor(0, 1);
  lcd.print("CO: ");
  lcd.print(concentratieCO);
  lcd.print("ppm  ");

  delay(1000);
}
